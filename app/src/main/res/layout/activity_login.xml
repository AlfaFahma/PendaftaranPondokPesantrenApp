<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginMainActivity1">


    <ImageView
        android:id="@+id/awalImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_registration" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngaji Nyambi Sekolah, Sekolah Nyambi Ngaji"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="600dp"
        android:textSize="18sp"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/loginAwalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/textView5"
        android:width="300dp"
        android:text="Login"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="14dp" />

    <Button
        android:id="@+id/registerAwalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginAwalButton"
        android:width="300dp"
        android:text="Register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="14dp" />



</RelativeLayout>