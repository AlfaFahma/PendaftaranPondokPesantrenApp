<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/educationImageView"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/ic_education" />


    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/educationImageView"
        android:layout_centerHorizontal="true"
        android:text="Pendaftaran Pondok Pesantren"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/ayoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/educationImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Ayo Mondok!!!"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/ly_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ayoTextView"
        android:orientation="vertical"
        android:padding="40dp">

        <EditText
            android:id="@+id/nameEditTextText"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:ems="10"
            android:backgroundTint="@color/white"
            android:hint="Name"
            android:paddingLeft="10dp"
            android:inputType="text" />


        <EditText
            android:id="@+id/emailEditTextText"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"
            android:hint="Email"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/createEditTextText"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"
            android:hint="Create Password"
            android:paddingLeft="10dp" />


        <EditText
            android:id="@+id/confirmEditTextText"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"
            android:hint="Confirm Password"
            android:paddingLeft="10dp" />

    </LinearLayout>


    <Button
        android:id="@+id/registerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ly_1"
        android:layout_centerHorizontal="true"
        android:width="300dp"
        android:text="Register"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/registerButton"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sudahTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sudah Punya Akun?"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/masukTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masuk"
            android:textSize="12sp"/>


    </LinearLayout>

</RelativeLayout>